<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhuxi.server.mapper.ProductSortMapper">
    
    <!-- 根据条件查询商品分类列表 -->
    <select id="selectByCondition" parameterType="com.zhuxi.pojo.entity.ProductSort" resultType="com.zhuxi.pojo.entity.ProductSort">
        SELECT * FROM product_sort
        <where>
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>
            <if test="parentId != null">
                AND parent_id = #{parentId}
            </if>
        </where>
        ORDER BY parent_id ASC, created_at ASC
    </select>
    
</mapper>
