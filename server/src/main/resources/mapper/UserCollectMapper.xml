<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhuxi.server.mapper.UserCollectMapper">
    
    <!-- 根据条件查询用户收藏列表 -->
    <select id="selectByCondition" parameterType="com.zhuxi.pojo.entity.UserCollect" resultType="com.zhuxi.pojo.entity.UserCollect">
        SELECT * FROM user_collect
        <where>
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <if test="productId != null">
                AND product_id = #{productId}
            </if>
        </where>
        ORDER BY created_at DESC
    </select>
    
</mapper>
